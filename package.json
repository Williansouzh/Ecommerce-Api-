{
  "name": "ecommerce-api-",
  "version": "1.0.0",
  "description": "This documentation outlines the development of a secure and robust e-commerce system using Node.js, Express, Redis, TypeORM, and PostgreSQL with a hexagonal architecture. The system covers a range of functionalities, from user authentication to product management and order processing.",
  "main": "index.js",
  "scripts": {
    "start:local": "ts-node-dev --transpile-only src/index.ts",
    "test:unit": "jest ./test/unit --forceExit ",
    "test:coverage": "jest --coverage",
    "test:functional": "jest --projects ./test --forceExit --runInBand",
    "typeorm": "ts-node-dev node_modules/typeorm/cli.js",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:generate ./src/adapters/database/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/nodemailer": "^6.4.15",
    "bcrypt": "^5.1.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "ecommerce-api-": "file:",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "nodemailer": "^6.9.14",
    "path": "^0.12.7",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "stripe": "^16.10.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
