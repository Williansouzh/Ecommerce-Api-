{
  "name": "ecommerce-api-",
  "version": "1.0.0",
  "description": "This documentation outlines the development of a secure and robust e-commerce system using Node.js, Express, Redis, TypeORM, and PostgreSQL with a hexagonal architecture. The system covers a range of functionalities, from user authentication to product management and order processing.",
  "main": "index.js",
  "scripts": {
    "start:local": "ts-node-dev --transpile-only src/index.ts",
    "typeorm": "ts-node-dev node_modules/typeorm/cli.js",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:generate ./src/adapters/database/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/module-alias": "^2.0.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "module-alias": "^2.2.3",
    "path": "^0.12.7",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
